<div class='container-fluid'>

  <div class='party-list card'>
    <img class='card-img-top' src='/images/party1.jpg' height='400px' width='400px' alt='Card image cap' />
    <div class='card-body'>
      <h4 class='card-title'>{{party.name}}</h4>
      <h5 class='card-title'>{{party.location}}</h5>
      <p class='card-text'>{{formatDate date}}</p>
      <p class='card-text'>{{party.start}}</p>
      <p class='card-text'>{{party.music}}</p>
      <p class='card-text'>{{party.category}}</p>
      <p class='card-text'>{{party.description}}</p>
      <a href='/parties/{{party._id}}/edit'>edit</a>
    </div>

    <style>
      #map { height: 300px; width: 600px }

    </style>

    <div class='card-body' id='map'>

      <script>

        const oneParty =
        {{{stringyfiedparty}}}

        function initMap() { let options = { zoom: 13, center: { lat: 52.52, lng: 13.405 }, }; let map = new google.maps.Map(document.getElementById("map"), options); const geocoder = new google.maps.Geocoder(); oneParty.map((party) => {
        geocoder.geocode({ address: party }, (results, status) => { if (status === "OK") { oneParty.setCenter(results[0].geometry.location); const marker = new google.maps.Marker({ map, position: results[0].geometry.location, }); const infoWindow =
        new google.maps.InfoWindow({ content: party.name }); marker.addListener("click", function () { infoWindow.open(map, marker); }) } }); }) }

      </script>
      <script async defer src='https://maps.googleapis.com/maps/api/js?key=AIzaSyDxJHXRZO_vG18Q4WIRHjtQkjqz-J4Kak8&&callback=initMap'></script>

    </div>

  </div>
