

<div class="container-fluid">

  <div class="party-list card">
    <img
      src="https://picsum.photos/200/300?random=2"
      class="card-img-top"
      height="400px"
      width="400px"
      alt="Card image cap"
    />
    <div class="card-body">
      <h4 class="card-title">{{party.name}}</h4>
      <h5 class="card-title">{{party.location}}</h5>
      <p class="card-text">{{formatDate date}}</p>
      <p class="card-text">{{party.start}}</p>
      <p class="card-text">{{party.category}}</p>
      <p class="card-text">{{party.description}}</p>

    </div>

    <style>
      #map { height: 300px; width: 600px }

    </style>

    <div class="card-body" id="map">

     <script>
       
        const oneParty = {{{stringyfiedparty}}}

        function initMap() { 
           console.log(oneParty)
          let options = { zoom: 13, center: { lat: 52.52, lng: 13.405 } }; 

          let map = new google.maps.Map(document.getElementById("map"), options); 
        
          const geocoder= new google.maps.Geocoder(); 

        
          geocoder.geocode({ address: oneParty.location }, (results, status) => { 
            if (status === "OK") { 
              map.setCenter(results[0].geometry.location); 
              const marker = new google.maps.Marker({ map, position: results[0].geometry.location, }); 
          
              const infoWindow = new google.maps.InfoWindow({ content: oneParty.name });

              marker.addListener("click", function () { infoWindow.open(map, marker) })
              }
          })
        } 
        
      </script>
     

<script
      src="https://maps.googleapis.com/maps/api/js?key={{{apiKey}}}&callback=initMap"
      async
      defer
    >
    </script>


    </div>

  </div>
</div>